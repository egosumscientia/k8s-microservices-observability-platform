{
    "id": null,
    "title": "FastAPI Microservices Overview",
    "uid": "fastapi-dashboard",
    "tags": ["microservices", "fastapi", "otel"],
    "timezone": "browser",
    "panels": [
        {
            "type": "graph",
            "title": "HTTP Requests",
            "targets": [
            {
                "expr": "http_requests_total",
                "legendFormat": "{{service.name}}",
                "refId": "A"
            }
            ],
            "datasource": "Prometheus"
        },
        {
            "type": "graph",
            "title": "HTTP Response Status Codes",
            "targets": [
            {
                "expr": "sum by (http.status_code, service_name) (rate(http_requests_total[1m]))",
                "legendFormat": "{{service_name}} - {{http.status_code}}",
                "refId": "B"
            }
            ],
            "datasource": "Prometheus"
        }
    ]
}
